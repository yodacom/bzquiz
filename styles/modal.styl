.modal
    position fixed
    font-family Arial, Helvetica, sans-serif
    top 0
    right 0
    bottom 0
    left 0
    background rgba(0, 0, 0, 0.8)
    z-index 99999
    opacity 1
    -webkit-transition opacity 400ms ease-in
    -moz-transition opacity 400ms ease-in
    transition opacity 400ms ease-in
    display:none;

.close
    background #606061
    color #FFFFFF
    line-height 25px
    position relative
    right 12px
    left 5px
    text-align center
    top 10px
    width 24px
    text-decoration none
    font-weight bold
    font-size 1.3rem
    -webkit-border-radius 12px
    -moz-border-radius 12px
    border-radius 12px
    -moz-box-shadow 1px 1px 3px #000
    -webkit-box-shadow 1px 1px 3px #000
    box-shadow 1px 1px 3px #000


#wrapper{
    position: fixed;
    border-radius: 10px;
    background: #fff;
    top:50%;
    left:50%;
    width:60%;
    height:60%;
    transform: translate(-50%, -50%);
    text-align: center;
    padding:10px;
}

#btnClose {
    position: absolute;
    top:5px;
    left:5px;
}

#contents {
    padding: 5px;
    overflow: scroll;
    height:100%;
}


.icon{
    border:none;
    background: none;
}
