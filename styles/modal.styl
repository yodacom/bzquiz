.modal
    position fixed
    font-family Arial, Helvetica, sans-serif
    top 0
    right 0
    bottom 0
    left 0
    background rgba(0, 0, 0, 0.8)
    z-index 99999
    opacity 1
    -webkit-transition opacity 400ms ease-in
    -moz-transition opacity 400ms ease-in
    transition opacity 400ms ease-in
    display:none;

.close
    background #606061
    color #FFFFFF
    line-height 25px
    position relative
    right 12px
    left 5px
    text-align center
    top 10px
    width 24px
    text-decoration none
    font-weight bold
    font-size 1.3rem
    -webkit-border-radius 12px
    -moz-border-radius 12px
    border-radius 12px
    -moz-box-shadow 1px 1px 3px #000
    -webkit-box-shadow 1px 1px 3px #000
    box-shadow 1px 1px 3px #000

.modal {
    position:fixed;
    top: 0;
    left: 0;
    width:100%;
    height:100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 99999;
    display:none;
    overflow: hidden;
    }

#wrapper
    position: fixed;
    border-radius: 10px;
    background: #fff;
    top:50%;
    left:50%;
    width:60%;
    height:60%;
    transform: translate(-50%, -50%);
    text-align: center;
    padding:10px;

    @media screen and (max-width 515px)
        top 0
        left: 0
        transform translate(0, 0);


#btnClose
    position: absolute;
    top:5px;
    left:5px;

#contents
    padding: 5px;
    overflow: scroll;
    height:100%;

.section
    grid()
    div
        padding rem-calc(15)
        cell(1, 4)
        &.other-cell
            cell(2, 4, 'bottom')
        &.different-cell
            cell(1, 3, g: 30px)
.icon
    border:none;
    background: none;

.modal-2
    width: 500px
    padding:0px 30px 30px 30px
    background: #FFA644
    border-radius: 5px 5px 5px 5px
    margin: auto
    @media screen and (max-width:rem-calc(breakpoints[md]))
        width 250px

.modal-2 h2
    @media screen and (max-width:rem-calc(breakpoints[md]))
        font-size 16px
