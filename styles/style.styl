@import '../node_modules/s-grid/s-grid-settings'
@import '../node_modules/s-grid/s-grid-functions'
@import '../node_modules/s-grid/s-grid-classes'


body
  text-align center
  padding 22px
  background-color: white
  @media screen and (max-width:rem-calc(breakpoints[md]))
      padding 2
.box
    margin 10px
    border 1px solid #eee
    font-family arial
    font-size 12px
    div
        padding 5px

.title-line
    border-bottom: solid 1px #000

.smallTitle
    display:none
    @media screen and (max-width:rem-calc(breakpoints[md]))
        display block

.vgrid
    background-color: #E9E9EA
    width:90%;
    box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    max-width: 50rem;
    margin-left:auto;
    margin-right: auto;
    padding 5px

// // font=awesome additional styles

.fa-question-circle-o:before
    cursor: pointer;

/* general grid style */

.my-grid
    background-color #E9E9EA
    margin-top rem-calc(100)
    center(600)
    grid()
    flex-direction: column
    max-with:15rem

.my-cell
    stack()
    padding rem-calc(10)
    background-color #D5D5D7
    @media screen and (min-width: rem-calc(breakpoints[md]))
        cell(1, 2)
        border-radius: 3px

.quiz-wrapper
    section
        grid()
        div
            padding rem-calc(15)
            cell(1, 4)
            &.other-cell
                cell(2, 4, 'bottom')
            &.different-cell
                cell(1, 3, g: 30px)

.my-custom-class-for-grid
    grid()
    .my-custom-class-for-grid-cell
        cell(1, 1)
        +above(rem-calc(breakpoints[md]))
            cell(1, 2)
        +above(rem-calc(breakpoints[lg]))
            cell(1, 3)
        +above(rem-calc(breakpoints[xlg]))
            cell(1, 4)
        +above(rem-calc(breakpoints[xxlg]))
            cell(1, 6)


// ======= Results Text and Modal ==============
#resultsText
    transition-property: background-color
    transition-duration: 2s
.resultsComment
    width: auto
    height: auto
    p
        padding: 5px 0;
        font-size: 14px;
        letter-spacing: 1px;
        line-height: 1.3em;
    hr
        width: 100%
        height: 1px
        background-color: #FFFFFF
        border: none

    h2
        font-size: 30px
        text-transform: uppercase
        letter-spacing: 5px
        text-align: center

form
    display:flex;
    align-items: center;



// modal text styles
#youWin
    background: #4CAF50
    // background: #52E894
#gettingThere
    background: #67FEFF

#keepTasting
    background:#7DFF65
// end modal test styles

.input
    width: 75%
    height: 44px
    background: #FDFCFB
    border-radius: 5px 0px 0px 5px
    border: none
    font-family: 'Lato', sans-serif
    color: #737373
    letter-spacing: 1px
    text-indent: 5%

.buttonModal
    width: 25%
    height: 46px
    background-color: #c42f2f
    border: none
    border-radius: 0px 5px 5px 0px
    font-family: 'Lato', sans-serif
    font-weight: bold
    color: inherit
    letter-spacing: 1px
    cursor: pointer
    padding:10px

.overlay
    height: 100vh
    display: flex
    justify-content: center
    align-items: center

.search-result
    cursor pointer
    position: relative
    margin-bottom: 15px
    align-items: stretch
    flex-wrap: nowrap
    border-bottom dotted 1px #CCCCCC

    &:hover
      box-shadow 2px 2px 2px 2px #CCCCCC
      border-bottom none

.validation-message
    color:red

.readMore
    display none

