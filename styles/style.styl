.fa-question-circle-o:before
    cursor: pointer;

/* general grid style */

.my-grid
    background-color #E9E9EA
    margin-top rem-calc(100)
    center(600)
    grid()
    flex-direction: column
    max-with:15rem


.my-cell
    stack()
    padding rem-calc(10)
    background-color #D5D5D7
    @media screen and (min-width: rem-calc(breakpoints[md]))
        cell(1, 2)
        border-radius: 3px

.p
  padding-top 30px
  font-size 23px

.quiz-wrapper
    section
        grid()
        div
            padding rem-calc(15)
            cell(1, 4)
            &.other-cell
                cell(2, 4, 'bottom')
            &.different-cell
                cell(1, 3, g: 30px)

.my-custom-class-for-grid
    grid()
    .my-custom-class-for-grid-cell
        cell(1, 1)
        +above(rem-calc(breakpoints[md]))
            cell(1, 2)
        +above(rem-calc(breakpoints[lg]))
            cell(1, 3)
        +above(rem-calc(breakpoints[xlg]))
            cell(1, 4)
        +above(rem-calc(breakpoints[xxlg]))
            cell(1, 6)


