body
    max-width 900px

.quiz-wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    margin-bottom 1.5625rem

.templates
    display none

.transition
    transform scale(2.6)

li
    align-items flex-start
    display flex
    margin-bottom 2px
    background #fff

.beer
    display flex
    align-items center

.beerImg
    border-radius 50%
    height 35px
    margin-top 10px
    min-width 35px
    width 35px
    vertical-align bottom
    border none
    transition:all 0.4s ease-in-out


.beerName
    margin 0 auto
    background #fff
    padding 10px
    text-align left
    flex 1

h4
    &.beerName
        text-align left

.beerDescription
    font-weight 600
    font-size 14px
    line-height 18px
    color #999
    margin 0
    text-align justify

.attributeDescription
    text-align justify
    text-align left
    margin-top 25px

div
    &.attributeDescription
        & > h3
            h4
                margin-left 20px
                padding 10px
