// ======== Color Picker ===========


.colorpickerBtn
    background-color #4CAF50
    border none
    color white
    padding 8px 8px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    margin 4px 2px
    transition-duration 0.4s
    cursor pointer
    border-radius 10px

.colorpickerBackground
    background-color white
    color black
    border 2px solid #f44336

// ======== Attribute Picker ===========

.attributepickerBtn
    background-color #4CAF50
    border none
    color white
    padding 8px 8px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    margin 4px 2px
    transition-duration 0.4s
    cursor pointer
    border-radius 10px


.attributepickerBackground
    // background-color white
    color black
    border 2px solid #f44336

.styled-select
    background: url(/img/tinyDownArrow.png) no-repeat 96% 0;
    height: 29px;
    overflow: hidden;
    width: 240px;
    border-radius: 20px
    background-color: #eec111
    

.styled-select select
   background: transparent;
   border: none;
   font-size: 14px;
   height: 29px;
   padding: 5px; /* If you add too much padding here, the options won't show in IE */
   width: 268px;

// ========= End attribute Btn ===========

.quizBtn
    button
        overflow visible
        position relative
        border 0
        padding 0
        cursor pointer
        height 40px
        width 120px
        font bold 15px/40px 'lucida sans', 'trebuchet MS', 'Tahoma'
        color #fff
        text-transform uppercase
        background #d83c3c
        border-radius 0 3px 3px 0
        text-shadow 0 -1px 0 rgba(0,0,0,0.3)
        &:hover
            background #e54040
            &:before
                border-right-color #e54040
        &:before
            content ''
            position absolute
            border-width 8px 8px 8px 0
            border-style solid solid solid none
            border-color transparent #d83c3c transparent
            top 10px
            left -4px
        &:focus
            &:before
                border-right-color #c42f2f
        &::-moz-focus-inner
            border 0
            padding 0
    &:disabled
        background-color #aaaaaa

.quizBtn button:active,
.quizBtn button:focus
    background #c42f2f

.quizResults
    display none
