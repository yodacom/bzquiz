body
    max-width 900px

.quiz-wrapper
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    margin-bottom 1.5625rem

.templates
    display none

.transition
    transform scale(2.6)

li
    align-items flex-start
    display flex
    margin-bottom 2px
    background #fff

.beerImg
    border-radius 50%
    height 35px
    margin-top 10px
    min-width 35px
    width 35px
    vertical-align bottom
    border none
    transition:all 0.4s ease-in-out

.beerName
    margin 0 auto
    background #fff
    padding 10px
    text-align left

h4
    &.beerName
        text-align left

.beerDescription
    font-weight 600
    font-size 14px
    line-height 18px
    color #999
    margin 0
    text-align justify

.attributeDescription
    text-align justify
    text-align left
    margin-top 25px

div
    &.attributeDescription
        & > h3
            h4
                margin-left 20px
                padding 10px

.colorpickerBtn
    background-color #4CAF50
    border none
    color white
    padding 8px 8px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    margin 4px 2px
    -webkit-transition-duration 0.4s
    transition-duration 0.4s
    cursor pointer
    border-radius 10px

.colorpickerBackground
    background-color white
    color black
    border 2px solid #f44336

.quizBtn
    button
        overflow visible
        position relative
        border 0
        padding 0
        cursor pointer
        height 40px
        width 120px
        font bold 15px/40px 'lucida sans', 'trebuchet MS', 'Tahoma'
        color #fff
        text-transform uppercase
        background #d83c3c
        border-radius 0 3px 3px 0
        text-shadow 0 -1px 0 rgba(0,0,0,0.3)
        &:hover
            background #e54040
            &:before
                border-right-color #e54040
        &:before
            content ''
            position absolute
            border-width 8px 8px 8px 0
            border-style solid solid solid none
            border-color transparent #d83c3c transparent
            top 10px
            left -4px
        &:focus
            &:before
                border-right-color #c42f2f
        &::-moz-focus-inner
            border 0
            padding 0
    &:disabled
        background-color #aaaaaa

.quizBtn button:active,
.quizBtn button:focus
    background #c42f2f

.quizResults
    display none